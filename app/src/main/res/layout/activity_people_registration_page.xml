<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_people_registration_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fl"
    tools:context="pscmr.ac.in.rescuethechild.PeopleRegistrationPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        tools:ignore="RtlHardcoded,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1500dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People Registeration"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView5"
                android:layout_alignStart="@+id/textView3"
                tools:ignore="HardcodedText,SpUsage"
                android:fontFamily="cursive"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:text="First Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="42dp"
            android:id="@+id/textView3"
            tools:ignore="HardcodedText"
            android:fontFamily="sans-serif" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="7"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="20dp"
            android:id="@+id/editText4"
            tools:ignore="LabelFor,RelativeOverlap"
            android:singleLine="true" />

        <TextView
            android:text="Last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText4"
            android:layout_marginTop="47dp"
            android:id="@+id/textView4"
            android:layout_alignStart="@+id/textView3"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="7"
            android:layout_below="@+id/editText4"
            android:layout_alignEnd="@+id/editText4"
            android:layout_marginTop="31dp"
            android:id="@+id/editText5"
            tools:ignore="LabelFor" />

            <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
                android:layout_marginTop="20dp"

                tools:ignore="HardcodedText"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignTop="@+id/editText7" />

        <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText7"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginTop="38dp"
            android:id="@+id/textView8"
            android:layout_alignStart="@+id/textView6"
            tools:ignore="HardcodedText" />

        <TextView
            android:text="Mail-Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/textView4"
            tools:ignore="HardcodedText" />

            <TextView
            android:text="MobileNo."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText9"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="34dp"
            android:id="@+id/textView9"
            tools:ignore="HardcodedText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="7"
                android:id="@+id/editText9"
                tools:ignore="LabelFor"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignStart="@+id/editText7" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="7"
                android:id="@+id/editText6"
                tools:ignore="LabelFor"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignStart="@+id/editText5" />

            <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="7"
            android:id="@+id/editText7"
            android:layout_marginTop="22dp"
                tools:ignore="LabelFor"
                android:layout_below="@+id/editText6"
                android:layout_alignStart="@+id/editText6" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="7"
                android:id="@+id/editText10"
                tools:ignore="LabelFor"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignStart="@+id/editText9" />

            <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:onClick="send1"
                tools:ignore="HardcodedText"
                android:layout_below="@+id/editText10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
